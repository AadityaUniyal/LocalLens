# Blood Platform Environment Configuration

# Server Configuration
PORT=3002
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Neon Database Configuration (Blood Donation Branch)
NEON_BLOOD_DATABASE_URL=postgresql://username:password@host/database?options=project%3Dblood-donation-branch-id
DATABASE_URL=postgresql://username:password@host/database?options=project%3Dblood-donation-branch-id

# Authentication Service Integration
AUTH_SERVICE_URL=http://localhost:3001
JWT_SECRET=your-jwt-secret-key-here

# External Services
REDIS_URL=redis://localhost:6379
NOTIFICATION_SERVICE_URL=http://localhost:3003

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (for emergency notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/blood-platform.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Emergency Service Configuration
EMERGENCY_RESPONSE_TIME_MINUTES=30

# Blood Platform Specific
BLOOD_EXPIRY_DAYS=35
DONATION_INTERVAL_DAYS=56
EMERGENCY_RADIUS_KM=200
DEFAULT_SEARCH_RADIUS_KM=50

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Monitoring and Analytics
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true